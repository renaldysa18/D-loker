<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview_bookmark"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:background="@color/backgroudn"
            android:id="@+id/imageView_bookmark"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:padding="4dp" />

        <TextView
            android:id="@+id/textViewTitle_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/imageView_bookmark"
            android:text="Penerjemah Literasi"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/textViewPerusahaan_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitle_bookmark"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imageView_bookmark"
            android:text="Perpustakaan Imam"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/textViewLokasi_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewPerusahaan_bookmark"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imageView_bookmark"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Jakarta" />

        <Button
            android:id="@+id/btn_delete_bookmark"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/imageView_bookmark"
            android:layout_toEndOf="@+id/textViewLokasi_bookmark"
            android:background="@color/red"
            android:text="@string/delete"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <!--<TextView
            android:id="@+id/textViewWaktu_timeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewLokasi_timeline"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/imageView_timeline"
            android:text="1 jam yang lalu"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />
-->
    </RelativeLayout>
</android.support.v7.widget.CardView>